@model AspNetCore_MVC_Demo.Controllers.TodoController
@{
    ViewData["Title"] = Model.Title;
}

<table class="table">
    <thead>
        <tr>
            <td>
                Status
            </td>
            <td>
                What
            </td>
            <td>
                Started
            </td>
            <td>
                Finished
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Todos)
        {
            <tr>
                <td>
                    @(item.IsDone ? "✓" : "")
                </td>
                <td>
                    @item.Mission
                </td>
                <td>
                    @item.CreatedOn
                </td>
                <td>
                    @(item.IsDone ? item.EndedOn : "")
                </td>
                <td>
                    @if (!item.IsDone)
                    {
                        <a asp-action="Complete" asp-route-id="@item.Id">
                            <button>
                                Finish
                            </button>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>