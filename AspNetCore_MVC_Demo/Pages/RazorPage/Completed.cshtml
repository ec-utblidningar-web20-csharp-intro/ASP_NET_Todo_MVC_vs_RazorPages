@page
@model CompletedModel
@{
    ViewData["Title"] = "Completed Todos";
}

<table class="table">
    <thead>
        <tr>
            <td>
                Status
            </td>
            <td>
                What
            </td>
            <td>
                Started
            </td>
            <td>
                Finished
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Todos)
        {
        <tr>
            <td>
                @(item.IsDone ? "✓" : "")
            </td>
            <td>
                @item.Mission
            </td>
            <td>
                @item.CreatedOn
            </td>
            <td>
                @(item.IsDone ? item.EndedOn : "")
            </td>
        </tr>
        }
    </tbody>
</table>