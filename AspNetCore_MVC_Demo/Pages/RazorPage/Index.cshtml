@page
@model AspNetCore_MVC_Demo.Pages.IndexModel
@{
    ViewData["Title"] = "My Todos";
}

<table class="table">
    <thead>
        <tr>
            <td>
                Status
            </td>
            <td>
                What
            </td>
            <td>
                Started
            </td>
            <td>
                Finished
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Todo)
        {
            <tr>
                <td>
                    @(item.IsDone ? "✓" : "")
                </td>
                <td>
                    @item.Mission
                </td>
                <td>
                    @item.CreatedOn
                </td>
                <td>
                    @(item.IsDone ? item.EndedOn : "")
                </td>
            </tr>
        }
    </tbody>
</table>